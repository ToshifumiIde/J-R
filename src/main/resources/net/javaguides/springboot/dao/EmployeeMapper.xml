<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.javaguides.springboot.dao.EmployeeMapper">
    <select id="getById" resultType="net.javaguides.springboot.entity.Employee">
        SELECT * FROM employee WHERE id = {id};
    </select>
    <select id="getEmployeeByUuid" resultType="net.javaguides.springboot.entity.Employee">
        SELECT * FROM employee WHERE uuid = #{uuid};
    </select>
    <insert id="createEmployee" useGeneratedKeys="true" >
        INSERT INTO employee (uuid , first_name , last_name , email) VALUES (
        #{uuid},
        #{firstName},
        #{lastName},
        #{email}
        );
    </insert>
</mapper>